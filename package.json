{
  "name": "development-infrastructure-tools",
  "version": "0.0.1",
  "packageManager": "yarn@3.6.4",
  "license": "MIT",
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "chalk": "^4",
    "commander": "^11.0.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "date-fns": "^2.30.0",
    "dot-object": "^2.1.4",
    "glob": "9.3.4",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "inquirer": "^9.2.10",
    "java2typescript": "^1.0.2",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "yaml": "^2.3.1"
  },
  "files": [
    "bin/config.json",
    "bin/tsconfig.json",
    "bin/typescript-fetch-templates/**/*",
    "bin/typescript-nestjs-templates/**/*",
    "bin/templates/**/*"
  ],
  "bin": {
    "itools-api": "bin/generate-api.js",
    "itools-create-app": "bin/create-app.js",
    "itools-docker": "bin/docker-decorator.js",
    "itools-package": "bin/package-helper.js"
  },
  "scripts": {
    "itools-create-app": "node bin/create-app.js",
    "itools-docker": "node bin/docker-decorator.js",
    "itools-package": "node bin/package-helper.js",
    "itools-api": "node bin/generate-api.js",
    "clean": "gulp clean",
    "build": "gulp build",
    "build-test-api": "tsc -p ./src/target_ts/tsconfig.json",
    "format": "prettier --write --ignore-unknown ./src",
    "api-generate-dev": "cross-env JAVA_OPTS=\"-Dlog.level=info\" openapi-generator-cli generate",
    "api-generate": "cross-env TS_POST_PROCESS_FILE=\"node ./node_modules/prettier/bin/prettier.cjs --write\" JAVA_OPTS=\"-Dlog.level=info\" openapi-generator-cli generate",
    "java2ts": "java2ts j2ts.config.json"
  },
  "devDependencies": {
    "@types/dot-object": "^2",
    "@types/gulp": "^4",
    "@types/inquirer": "^9",
    "@types/prettier": "^3"
  }
}
